<script>
am4core.ready(function() {

// Themes begin
am4core.useTheme(am4themes_kelly);
am4core.useTheme(am4themes_animated);
// Themes end

// Create chart instance
var chart = am4core.create("year", am4charts.XYChart);
chart.scrollbarX = new am4core.Scrollbar();


chart.data = [
